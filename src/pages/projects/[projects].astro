const { name, description, link } = Astro.props;
---

<Layout>
  <section class="mx-auto w-3/6">
    <a href=
`${link}`>
    <img class="rounded w-100 h-50 drop-shadow-[10px_10px_35px_rgba(100,0,255)] md:w-150 h-75 lg:w-175 h-100" src=`/images/${projects}.png`
    alt="Crisis of Transparency"/></a>
    <h1 class="font-bold mt-4">Project {name}</h1>
    <p>{description}</p>
    <section></section>
  </section>
</Layout>
