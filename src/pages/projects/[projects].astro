---
import Layout from "../../layouts/Layout.astro";
export async function getStaticPaths() {
  return [
    {
      params: { projects: "Crisis" },
      props: {
        name: "Crisis of Transparency",
        description: "My first Astro Project!",
        link: "https://crisisoftransparency.netlify.app/",
      },
    },
    {
      params: { projects: "HexAdventures" },
      props: {
        name: "Hex Adventures",
        description: "Game created for Global Game Jam!",
        link: "https://carlosavila185.itch.io/hex-adventures",
      },
    },
    {
      params: { projects: "NCWI" },
      props: {
        name: "Network of Canadian Investigators",
        description: "My first Astro Project!",
        link: "https://www.caninvestigate.com/",
      },
    },
    {
      params: { projects: "Portfolio" },
      props: {
        name: "Personal Portfolio",
        description: "My Personal Portfolio",
